{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@util/*": ["util/*"],
      "@component/*": ["component/*"]
    }
  },
  "exclude": ["dist"]
}
